<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llCustomEditTextMainContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#130095ff"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/flRightView"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="3dp"
            android:paddingTop="5dp"
            android:textColor="#9c000000"
            android:textSize="16sp"
            android:hint="Name"
            android:fontFamily="sans-serif-light"
            />

        <FrameLayout
            android:id="@+id/flRightView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvContent"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvContent"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:paddingRight="7dp">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvEditTextValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="asdasdasd"
                android:fontFamily="sans-serif-light"
                android:textColor="#0095ff"
                android:visibility="gone" />

        </FrameLayout>
    </RelativeLayout>
</LinearLayout>