<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvActiveQueueItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivBookmark"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/ivBookmark"
                android:layout_toLeftOf="@+id/tvOpenClosed"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:paddingLeft="1dp"
                android:text="Tashkent, Uzbekistan"
                android:textColor="@color/dark_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvOpenClosed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivBookmark"
                android:layout_alignTop="@+id/ivBookmark"
                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@+id/ivBookmark"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="OPEN"
                android:textColor="@color/redish"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivBookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_android_black_24dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvNameOfOrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:fontFamily="sans-serif-light"
            android:orientation="horizontal"
            android:paddingRight="25dp"
            android:text="Passportny stol M.Ulugbeksogo rayona"
            android:textColor="@android:color/black"
            android:textSize="16sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvApproximateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:text="120 min"
                android:textColor="@color/grad_blue_light"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvWaitingPeople"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:text="N/A"
                android:textColor="@color/grad_blue_light"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="1dp">

            <TextView
                android:id="@+id/tvApproximateTimeTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:text="Left"
                android:textColor="@color/dark_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvWaitingPeopleTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:text="On Queue"
                android:textColor="@color/dark_gray_text"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHistoryContainer"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:layout_marginTop="15dp"
            android:paddingRight="1dp">

            <TextView
                android:id="@+id/tvLastVisitTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="sans-serif-light"
                android:paddingRight="10dp"
                android:gravity="right"
                android:text="Last Visit:"
                android:textColor="@color/redish" />

            <TextView
                android:id="@+id/tvLastVisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Jan 12, 2017 (12 months ago)"
                android:textStyle="bold"
                android:textColor="@color/redish" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
